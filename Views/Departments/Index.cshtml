@model IEnumerable<EntV.Models.DepartmentViewModel>
@using EntV.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Member> SignInManager
@inject UserManager<Member> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Deprtments</h1>
@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Administrator"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-solid fa-plus"></i> Create New</a>
        </p>
    }
}

<table id="dataTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Administrator"))
                        {
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.DepartmentId"><i class="fa fa-solid fa-pen"></i> Edit</a><span> |</span>
                            <a asp-action="Details" class="btn btn-info" asp-route-id="@item.DepartmentId"><i class="fa fa-solid fa-info-circle"></i> Details</a><span> |</span>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DepartmentId" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-solid fa-trash"></i> Delete</a>
                        }
                        else
                        {
                            <a asp-action="Details" class="btn btn-info" asp-route-id="@item.DepartmentId"><i class="fa fa-solid fa-info-circle"></i> Details</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}